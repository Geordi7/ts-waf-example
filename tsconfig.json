{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    // "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/"
  },
  "include": ["./src/**/*"],
}
